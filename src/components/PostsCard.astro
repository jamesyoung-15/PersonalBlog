---
interface Props {
    href: string;
    image: string;
    publishDate: string;
    title: string;
    description: string;
    tags: string[];
}

const { href, image, publishDate, title, description, tags } = Astro.props;
---

<article class="post-card">
    <a href={href}>
        <img src={image} alt='Blog Post'>
        <div class="post-card-content">
                <h3 class="post-card-title">{title}</h3>
                <span class="post-card-date">{publishDate}</span>
                <div class="post-card-tags">
                    {
                        tags.map((tag) => (
                            <span class="post-card-tag">{tag}</span>
                        ))
                    }
                </div>
                <p class="post-card-description">{description}</p>
                <div class="post-card-button">
                    <a href={href}>
                        Read More
                    </a>
                </div>
        </div>
    </a>
</article>
