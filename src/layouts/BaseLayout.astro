---
// This is the layout for the entire site, including the header and footer and passes in the page title, ogImage, description, and canonical URL

import '../styles/global.css';
import '../styles/blog-cards.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	pageTitle: string;
	ogImage?: string;
	description?: string;
	canonicalURL?: string;
}

const {
	pageTitle = "James' Blog", 
	ogImage = "/placeholder.svg", 
	description = "A blog about web development, programming, and technology.", 
	canonicalURL = new URL(Astro.url.pathname, Astro.site),
} = Astro.props;

const socialImage = new URL(ogImage, Astro.url);

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/my-logo.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph -->
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={socialImage} />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&amp;display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap" rel="stylesheet">
		<!-- Icons -->
		<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
		
		<title>{pageTitle}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />

		<!-- Import Scripts -->
		<script src="../scripts/theme.ts"></script>
		<script src="../scripts/nav-menu.ts"></script>
	</body>
</html>

